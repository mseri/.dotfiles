// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Fira Mono for Powerline",
    "editor.fontSize": 15,
    "editor.rulers": [81, 101],
    "editor.renderWhitespace": "boundary",
    
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.{o,opt,native,annot,cm*,mll}": true
    },
    "files.watcherExclude":{
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/*.{o,opt,native,annot,cm*,mll}": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.{o,opt,native,annot,cm*,mll}": true
    },

    "ocaml.merlinPath": "/home/mseri/.opam/system/bin/ocamlmerlin",
    "ocaml.ocpIndentPath": "/home/mseri/.opam/system/bin/ocp-indent",

    "extensions.autoUpdate": true,
    "telemetry.enableTelemetry": false
}