// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Iosevka",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.rulers": [81, 101],
    "editor.renderWhitespace": "boundary",
    
    "search.useRipgrep": true,

    "files.exclude": {
        "**/_build": true,
        "**/build": true,
        "**/dist": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.{o,opt,native,annot,cm*,mll}": true
    },
    "files.watcherExclude":{
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/*.{o,opt,native,annot,cm*,mll}": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.{o,opt,native,annot,cm*,mll}": true
    },

    "ocaml.merlinPath": "/home/marcellos/.opam/system/bin/ocamlmerlin",
    "ocaml.ocpIndentPath": "/home/marcellos/.opam/system/bin/ocp-indent",

    "extensions.autoUpdate": true,
    "telemetry.enableTelemetry": false,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.colorTheme": "Chromodynamics",
    "workbench.iconTheme": "vscode-icons",
    "vsicons.projectDetection.autoReload": true,
    "git.confirmSync": false,
    "workbench.activityBar.visible": true,
    "editor.minimap.enabled": false
}