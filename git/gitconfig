[user]
    name = Marcello Seri
    email = marcello.seri@gmail.com
[push]
    default = matching
[pull]
    rebase = false
[core]
    editor = nvim
[color]
    ui = true
    status = auto
[branch]
    autosetuprebase = always
[format]
    signOff = true
[commit]
    signOff = true
[github]
    user = mseri
[core]
    excludesfile = ~/.gitignore_global
    pager = less -x4,9
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[pager]
    difftool = true
[init]
	  defaultBranch = main
[diff]
    tool = difftastic
    algorithm = histogram
[alias]
    st = status -sb
    co = checkout
    gl = log --graph --abbrev-commit --oneline --decorate
    gr = log --oneline --graph --decorate --branches --remotes --abbrev-commit
    chg = log --oneline --no-merges
    ckb = checkout -b
    br = branch
    cs = commit -s
    csa = commit -as
    last = log -1 HEAD
	  ll = log --pretty=format:%C(green)%h\\ %ad%C(yellow)%d\\ %Creset%s%Cblue\\ [%cn] --decorate --date=short
	  recent = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"
    nicediff = diff -w --histogram --minimal --color-words
    vimdiff = diff --tool=nvimdiff
